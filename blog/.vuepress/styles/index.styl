*, ::before, ::after {
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: 'Source Han Sans SC VF', 'Helvetica Neue', Helvetica, Arial, sans-serif !important;
}

code, kbd, .line-number {
  font-family: 'CaskaydiaCove Nerd Font', 'Source Han Sans SC VF', Consolas, monaco, monospace !important;
}

.navbar .logo {
  transition: all, 0.3s;
}

.navbar a:hover .logo {
  transform: rotate(180deg);
}
